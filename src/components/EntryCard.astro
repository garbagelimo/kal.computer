---
const {
  title,
  href,
  eyebrow,
  summary,
  meta,
  tags = [],
  external = false,
} = Astro.props;

const rel = external ? 'noreferrer noopener' : undefined;
const target = external ? '_blank' : undefined;
---

<article class="entry-card">
  <a class="entry-card__link" href={href} rel={rel} target={target}>
    {eyebrow && <span class="entry-card__eyebrow">{eyebrow}</span>}
    <h3>{title}</h3>
    {summary && <p>{summary}</p>}
    {tags.length > 0 && (
      <ul class="tag-list">
        {tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
    )}
    {meta && <span class="meta-line">{meta}</span>}
  </a>
</article>
